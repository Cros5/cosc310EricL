import java.text.DateFormat;  
import java.text.SimpleDateFormat;  
import java.util.Date;  
import java.util.Calendar;  
import java.util.ArrayList;
public class WareHouse { //this class tracks the amount of storage space currently in use as well as maximum storage space in a warehouse
    private int totSpace; //total storage volume in m^3
    private int remSpace; //remaining storage volume in m^3
    private String wareHouseID; //ID of warehouse
    private ArrayList<String[]> changes = new ArrayList<String[]>(); //tracks which users modified warehouse stock
    public int getTotSpace() {
        return totSpace; //returns total space
    }
    public int getRemainingSpace() {
        return remSpace; //returns remaining space
    }
    public void setTotSpace(int space) {
        totSpace=space; //sets total space
    }
    public void updateRemainingSpace(int space) {//updates remaining space if required in the event of a discrepency or when setting up the system or expanding the warehouse
        remSpace=space;
    }
    public void setID(String ID) { //sets ID of warehouse
        wareHouseID=ID;
    }
    public String getID() { //gives warehouse ID
        return wareHouseID;
    }
    public void seeChanges(int n) {//prints out last n logged changes to warehouse
        int fin=changes.size()-1;//index for final entry on changes
        if (n>fin+1) {//checks if requested number of changes is greater than total changes and corrects it
            n=fin;
        }
        for (int i=0; i<n; i++) {//cycles through changes from most recent change back 
            System.out.println(changes.get(fin)[2]+", "+ changes.get(fin)[0]+" "+changes.get(fin)[1]);//prints change log to user
            fin=fin-1;//updates index 
        }
    }
    public void remove(Item it, int n, User per) {//adds storage space when n items are used
        if (per.getPermission()>=it.getPermission()){//checks if users permission status is sufficient
            remSpace=remSpace+it.getSpace()*n;
            Date date = Calendar.getInstance().getTime();  
        	DateFormat dateFormat = new SimpleDateFormat("yyyy-mm-dd hh:mm:ss");  
        	String[] str= {per.getName(),"removed "+n+" "+it.getName(), dateFormat.format(date)};
        	changes.add(str);//adds log of change to list of changes
        }
        else {//if user's permission status is too low
            System.out.println("unathorized removal"); //prints message to user that their permission status does not authorize this change
        }
    }
    public void add(Item it, int n, User per) {//removes storage space when n items are added
        remSpace=remSpace-it.getSpace()*n;
        Date date = Calendar.getInstance().getTime();  
    	DateFormat dateFormat = new SimpleDateFormat("yyyy-mm-dd hh:mm:ss");  
    	String[] str= {per.getName(),"added "+n+" "+it.getName(), dateFormat.format(date)};
    	changes.add(str);//adds log of change to list of changes
    }
    }